<form action="~/Fornecedor/AbrirCadastro" method="post">
    <button class="btn btn-default btn-outline-primary">
        Cadastrar
    </button>
</form>
<br />
<table id="tabela" style="width: 100%; display: inline-table;" class="table table-responsive">
    <thead>
        <tr>
            <th><b>Nome</b></th>
            <th><b>Link</b></th>
            <th><b>Histórico</b></th>
            <th><b>Vertical</b></th>
            <th><b>Ação</b></th>
        </tr>
    </thead>
    <tbody id="tbodyCadastro">
        @if (ViewBag.ListaFornecedor != null)
        {
            @foreach (Fornecedor Fornecedor in ViewBag.ListaFornecedor)
            {
                <tr>
                    <td>@Fornecedor.Nome</td>
                    <td>@Fornecedor.Link</td>
                    @if (Fornecedor.Historico)
                    {
                        <td>Sim</td>
                    }
                    else
                    {
                        <td>Não</td>
                    }
                    <td>@Fornecedor.Vertical.Descricao</td>
                    <td>
                        <div class="form-inline">
                            <form action="~/Fornecedor/AbrirEdicao/@Fornecedor.Id" method="post">
                                <button type="submit" class="btn btn-default btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </form>
                            <form action="~/Fornecedor/Excluir/@Fornecedor.Id" method="post">
                                <button type="submit" class="btn btn-default btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

