<form action="~/Faturas/AbrirCadastro" method="post">
    <button class="btn btn-default btn-outline-primary">
        Cadastrar
    </button>
</form>
<br />
<table id="tabela" style="width: 100%; display: inline-table;" class="table table-responsive">
    <thead>
        <tr>
            <th><b>Descrição</b></th>
            <th><b>Fornecedor</b></th>
            <th><b>Valor</b></th>
            <th><b>Data Lançamento</b></th>
            <th><b>Ação</b></th>
        </tr>
    </thead>
    <tbody id="tbodyCadastro">
       @if (ViewBag.ListaFatura != null)
        {
           @foreach (Fatura Fatura in ViewBag.ListaFatura)
            {
                <tr>
                    <td>@Fatura.Descricao</td>
                    <td>@Fatura.Fornecedor.Nome</td>
                    <td>@Fatura.Valor</td>
                    <td>@Fatura.DataLancamento</td>
                    <td>
                        <div class="form-inline">
                            <form action="~/Faturas/AbrirEdicao/@Fatura.Id" method="post">
                                <button type="submit" class="btn btn-default btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </form>
                            <form action="~/Faturas/Excluir/@Fatura.Id" method="post">
                                <button type="submit" class="btn btn-default btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

